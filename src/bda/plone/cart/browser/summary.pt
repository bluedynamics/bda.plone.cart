<div id="cart"
     i18n:domain="bda.plone.cart"
     tal:attributes="data-context-url view/context_url"
     tal:define="icons python:context.restrictedTraverse('@@iconresolver');">

  <span style="display:none;"
        class="cart_execution_context">summary</span>

  <div id="cart_item_template" style="display: none;">

    <div class="cart_item summary_item">
      <div class="row g-0 gap-3">
        <div class="cart_item_image_wrapper col-auto">
          <a href="#" class="cart_item_location">
            <img class="cart_item_preview_image" src="" />
          </a>
        </div>

        <div class="col">
          <h3>
            <a href="#" class="cart_item_location me-3">
              <span class="cart_item_title">Title</span>
            </a>
          </h3>
          <div class="cart_item_alert" style="display: none;">Alert</div>
          <p class="cart_item_description">Description</p>
        </div>
      </div>

      <div class="row g-0 gap-3">
        <div class="cart_item_content col d-flex align-items-end justify-content-end">
          <div class="row row-cols-auto gx-2 align-items-center">
            <div class="cart_item_comment_wrapper">
              <label class="form-label" i18n:translate="comment">Comment</label>:
              <span class="cart_item_comment">comment</span>
            </div>

            <div class="cart_item_update ">
              <span class="cart_item_uid" style="display: none;">uid</span>
              <span class="cart_item_comment" style="display: none;">comment</span>
              <input type="number" min="0" size="2" class="cart_item_count form-control" />
              <label class="cart_item_quantity_unit form-label ms-2 ">Quantity</label>
              <a href=""
                class="update_cart_item update_cart_action ms-2 me-2"
                title="Update cart"
                i18n:attributes="title update_cart">
                <tal:icon replace="structure python:icons.tag('arrow-clockwise')" />
              </a>
            </div>

            <div class="cart_item_remove ">
              <span class="cart_item_uid" style="display: none;">uid</span>
              <span class="cart_item_comment" style="display: none;">comment</span>
              <span class="cart_item_count" style="display: none;">0</span>
              <a href=""
                class="remove_from_cart remove_from_cart_action"
                title="Remove from cart"
                i18n:attributes="title remove_from_cart">
                <tal:icon replace="structure python:icons.tag('x-circle')" />
              </a>
            </div>

            <div class="cart_item_discount_wrapper ms-3">
              <span class="discount d-flex no-wrap justify-content-between">
                <span i18n:translate="discount">Discount:</span>
                <span class="cart_item_discount">Discount</span>
              </span>
            </div>

            <div class="price d-flex no-wrap justify-content-between ms-3">
              <span class="label me-2" i18n:translate="price">Price</span>
              <span class="cart_item_price value">Price</span>
            </div>

          </div>
        </div>
      </div>
      
    </div>
  </div>

  <div id="cart_items" style="display: none;"></div>

  <div id="cart_no_items" style="display: none;">
    <p i18n:translate="empty_cart">Cart is empty</p>
  </div>

  <div id="cart_summary" style="display: none;" class="summary_wrapper clearfix">
    <table class="cart_sum_content invisible-grid"
           tal:define="currency view/currency">
      <tal:details condition="not:view/summary_total_only">
        <tr class="cart_summary_net">
          <td i18n:translate="summary_net" class="summary_label">Net:</td>
          <td class="cart_net summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
        <tr class="cart_summary_vat">
          <td i18n:translate="summary_vat" class="summary_label">VAT.:</td>
          <td class="cart_vat summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
        <tr class="cart_summary_discount_net discount" style="display: none;">
          <td i18n:translate="discount_net" class="summary_label">Discount Net:</td>
          <td class="discount_net summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
        <tr class="cart_summary_discount_vat discount" style="display: none;">
          <td i18n:translate="discount_vat" class="summary_label">Discount VAT.:</td>
          <td class="discount_vat summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
      </tal:details>
      <tr class="cart_summary_discount discount" style="display: none;">
        <td class="summary_label"><strong i18n:translate="discount_total">Discount Total:</strong></td>
        <td class="summary_ammount"><strong class="discount_total">Total</strong></td>
        <td tal:condition="currency" class="sumary_currency">
          <strong tal:content="currency">EUR</strong>
        </td>
      </tr>
      <tr class="cart_summary_shipping shipping" style="display: none;">
        <td class="summary_label">
          <span class="shipping_info">
            <span i18n:translate="summary_shipping" tal:omit-tag>Shipping</span>:
            <span class="shipping_label"></span>
            <span class="shipping_description"></span>:
          </span>
        </td>
        <td class="shipping_total summary_ammount">0.00</td>
        <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
      </tr>
      <tr class="cart_summary_total">
        <td class="summary_label"><strong i18n:translate="summary_total">Total:</strong></td>
        <td class="summary_ammount"><strong class="cart_total ">Total</strong></td>
        <td tal:condition="currency" class="sumary_currency">
          <strong tal:content="currency">EUR</strong>
        </td>
      </tr>
    </table>
    <div class="visualClear"></div>
  </div>

  <div class="cart_summary_buttons d-flex justify-content-between">
    <a href="javascript:history.back()" class="btn btn-secondary icon icon-prev cart_back">
      <tal:icon replace="structure python:icons.tag('chevron-left')" />
      <span i18n:translate="back">back</span>
    </a>
    <a href="@@checkout"
       class="btn btn-primary icon icon-next cart_checkout_button prevent_if_no_longer_available"
       tal:define="checkout_url view/checkout_url"
       tal:condition="checkout_url"
       tal:attributes="href checkout_url">
      <span i18n:translate="checkout">Checkout</span>
      <tal:icon replace="structure python:icons.tag('chevron-right')" />
    </a>

  </div>

</div>
