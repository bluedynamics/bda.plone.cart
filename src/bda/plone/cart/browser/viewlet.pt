<div id="cart_viewlet"
    class="viewlet"
    style="display:none;"
    i18n:domain="bda.plone.cart"
    tal:define="icons python:context.restrictedTraverse('@@iconresolver');">

  <p class="hiddenStructure">Cart</p>

  <div id="cart_viewlet_summary">
    <a href="#"
       title="Cart"
       class="dropdown-toggle"
       aria-expanded="false"
       i18n:attributes="title cart_summary">
      <tal:icon replace="structure python:icons.tag('bag')" />
      <span i18n:translate="cart">Cart</span>
      <span class="countWrapper"><span class="brackets">(</span><span class="cart_total_count"
        tal:content="view/cart_total_count">0</span><span class="brackets">)</span></span>
    </a>

    <div id="cart_viewlet_details" class="viewlet-details dropdown-menu dropdown-menu-end">
      <tal:cart replace="structure context/@@cart_tile" />

      <div class="cart_viewlet_actions">
        <a href="@@checkout"
          class="btn btn-primary btn-sm go_to_cart_action prevent_if_no_longer_available"
          tal:attributes="href view/checkout_url"
          tal:condition="view/show_checkout">
          <tal:icon replace="structure python:icons.tag('credit-card')" />
          <span i18n:translate="checkout">Checkout</span>
        </a>

        <a href="@@cart"
          class="btn btn-primary btn-sm go_to_cart_action"
          tal:attributes="href view/cart_url"
          tal:condition="view/show_to_cart">
          <tal:icon replace="structure python:icons.tag('bag')" />
          <span i18n:translate="cart">Cart</span>
        </a>
      </div>

    </div>

  </div>

</div>
